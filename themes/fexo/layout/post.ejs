<link rel="stylesheet" href="/css/prism.css">

<div class="post-header<%= theme.toolbox.isShow && theme.post.header_align ? ' ' + theme.post.header_align : '' %>">
   <%- partial('_partial/component/toolbox') %>
</div>

<%- partial('_partial/component/toc') %>

<div class="content content-post<%= theme.post.header_align ? ' ' + theme.post.header_align : '' %>">
   <%- partial('_partial/article', {post: page, index: false}) %>

   <% if(page.original) { %>
       <%- partial('_partial/component/original.ejs') %>
   <% } %>

   <%- partial('_partial/component/donation') %>
   <%- partial('_partial/component/prev-net') %>
</div>

<%- partial('_partial/component/back-top', {showBacktop: theme.backtop.post}) %>
